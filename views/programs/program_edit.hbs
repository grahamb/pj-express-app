<h1>Edit Program Record</h1>

<form action="/programs/{{program.id}}" method="POST">

    {{#with program}}

    <table>
        <tr><td>Full Name</td><td><input type="text" name="name" id="name" value="{{name}}"></td></tr>
        <tr><td>Short Name</td><td><input type="text" name="short_name" id="short_name" value="{{short_name}}"></td></tr>
    </table>

    <label for="description">
        Description
        <textarea name="description" id="description">{{description}}</textarea>
    </label>

    <table>
        <tr><td>Fitness Level</td><td>{{fitness_level}}</td></tr>
        <tr><td>Prerequesites</td><td>{{prerequesites}}</td></tr>
        <tr><td>Knowledge, Skills, Equipment</td><td>{{knowledge_skills_equipment}}</td></tr>
        <tr><td>Premium Activity</td><td>{{premium_activity}}</td></tr>
        <tr><td>Location</td><td>
            <select name="location" id="location">
                <option value=""></option>
                <option value="onsite" {{selected location 'onsite'}}>On-Site</option>
                <option value="offsite" {{selected location 'offsite'}}>Off-Site</option>
            </select>
        </td></tr>
        <tr><td>Program Periods Available</td><td><input type="number" name="program_periods_available" id="program_periods_available" value={{program_periods_available}}></td></tr>
        <tr><td>Max Participants per Period</td><td><input type="number" name="max_participants_per_period" id="max_participants_per_period" value={{max_participants_per_period}}></td></tr>
        <tr><td>Program Periods Required</td><td><input type="number" name="program_periods_required" id="program_periods_required" value={{program_periods_required}}></td></tr>
        <tr><td>Fee</td><td><input type="text" name="fee" id="fee" value={{fee}}></td></tr>
        <tr><td>OOS Required</td><td><input type="number" name="oos_required" id="oosRequired" value={{oos_required}}></td></tr>
        <tr><td>Hidden</td><td>
            <select name="hidden" id="hidden">
                <option value="false" {{selected hidden false}}>false</option>
                <option value="true" {{selected hidden true}}>true</option>
            </select>
        </td></tr>
    </table>

    <input type="submit" value="Save">

    {{/with}}
</form>